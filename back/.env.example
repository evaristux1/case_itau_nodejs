# ─────────────────────────────
# App
# ─────────────────────────────
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
API_VERSION=1.0.0

# ─────────────────────────────
# Database (dev com SQLite)
# Para Postgres, veja o bloco comentado mais abaixo.
# ─────────────────────────────
DATABASE_PROVIDER=sqlite
DATABASE_URL=file:./dev.db
DATABASE_LOGGING=false
DATABASE_POOL_SIZE=10
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=true

# ─────────────────────────────
# JWT / Security
# Gere segredos com:
#   openssl rand -hex 32
# ─────────────────────────────
JWT_SECRET=__CHANGE_ME_openssl_rand_hex_32__
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=__CHANGE_ME_openssl_rand_hex_32__
JWT_REFRESH_EXPIRES_IN=7d

# 32 bytes em HEX = 64 caracteres
ENCRYPTION_KEY=tFyL2/mODfbCWvyeeDO9LK+Ru8xhm/zbbHcx+lCar/Y=

BCRYPT_ROUNDS=12
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# ─────────────────────────────
# Rate Limiting
# ─────────────────────────────
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ─────────────────────────────
# Cache (Redis)
# ─────────────────────────────
CACHE_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# ─────────────────────────────
# Monitoring / Observability
# ─────────────────────────────
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# ─────────────────────────────
# Feature Flags
# ─────────────────────────────
FEATURE_SWAGGER_ENABLED=true
FEATURE_METRICS_ENABLED=true
FEATURE_HEALTH_CHECK_ENABLED=true

# ─────────────────────────────
# Postgres (exemplo) — descomente e ajuste se for usar
# ─────────────────────────────
# DATABASE_PROVIDER=postgresql
# DATABASE_URL=postgresql://user:password@localhost:5432/mydb?schema=public
# DATABASE_LOGGING=true
# DATABASE_SSL=false
# DATABASE_SYNCHRONIZE=false
